extends layout



block content

	each info in infos


		div(class="well container")
			form(class="form-horizontal" role="form" id="signupform" method="POST" action="/users/updateprofile")
				div(class="form-group")
						label(class="col-sm-2 control-label") Email
						div(class="col-sm-10")
							input(type="email" placeholder="Enter Email" class="form-control" name="email" readonly="readonly" value=info.email)
				div(class="form-group")
						label(class="col-sm-2 control-label") New Password
						div(class="col-sm-10")
							input(type="password" placeholder="Enter Password" class="form-control" name="password")
				div(class="form-group")
						label(class="col-sm-2 control-label") Confirm New Password
						div(class="col-sm-10")
							input(type="password" placeholder="Retype Password" class="form-control" name="confirmpassword")
				div(class="form-group")

					if(typeof(error) !== 'undefined')
						div(class="col-sm-offset-2 col-sm-10")
							if (error !== 'none')
								div(class="alert alert-danger") #{message}
							else if (error === 'none')
								div(class="alert alert-success") 
									strong #{message} 
									a(href="/" class="alert-link") Go Back.


				div(class="col-sm-offset-2 col-sm-10")
					button(type="submit" class="btn btn-primary") Update Password